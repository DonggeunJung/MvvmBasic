<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".ui.quote.QuotesActivity">

    <TextView
        android:id="@+id/tvQuotes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:text="aaaaaaaa"
        android:gravity="center_vertical|left"
        app:layout_constraintBottom_toTopOf="@+id/etAuthor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etAuthor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:hint="Author"
        app:layout_constraintBottom_toTopOf="@+id/etQuote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddQuote"
        app:layout_constraintHeight_percent="0.1" />

    <EditText
        android:id="@+id/etQuote"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Quote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddQuote"
        app:layout_constraintHeight_percent="0.1" />

    <Button
        android:id="@+id/btnAddQuote"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="?colorAccent"
        android:text="Add Quote"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintTop_toTopOf="@+id/etAuthor" />

</androidx.constraintlayout.widget.ConstraintLayout>